{% import "macros.j2" as m %}
{% set og_image = og_image or url_for("static", filename = "img/logo.png") %}
<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="{{ url_for("static", filename = "img/logo.png") }}">
    <meta property="og:type" content="website">
    <meta property="og:image" content="{{ og_image }}">
    {% assets "css_all" %}
        <link rel="stylesheet" href="{{ ASSET_URL }}">
    {% endassets %}
    <script defer data-domain="schedarionapoletano.it" src="https://p.bftapp.com/js/script.js"></script>
    <title>{% block title %}Schedario napoletano{% if sub_title %} Â· {{ sub_title }}{% endif %}{% endblock %}</title>
    {% block head %}{% endblock %}
</head>
<body>
<header class="site-header top">
    <div class="wrapper">
      <span class="site-title">
    <a href="{{ url_for("home") }}">Schedario napoletano</a>
          {% if letter %}
              &nbsp;&rsaquo;&nbsp; {{ letter }}</span>
          {% endif %}
        </span>
    </div>
</header>
<main class="page-content" aria-label="Content">
    <div class="wrapper">
        {% block content %}{% endblock %}
    </div>
</main>
<footer class="site-footer">
    <div class="wrapper">
        <div class="footer-col-wrapper">
            <div class="footer-col">
                <ul>
                    <li><a href="{{ url_for("a_proposito") }}">A proposito</a></li>
                </ul>
            </div>
            <div class="footer-col">
                <p>&copy; Giuseppe Giacco</p>
            </div>
        </div>
    </div>
</footer>
</body>
</html>
